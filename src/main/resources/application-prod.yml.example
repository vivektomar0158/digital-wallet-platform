# Production configuration Example
# Copy this to application-prod.yml and fill in real values
spring:
  datasource:
    # URL will be provided via environment variable SPRING_DATASOURCE_URL in production
    url: ${SPRING_DATASOURCE_URL}
    username: ${SPRING_DATASOURCE_USERNAME}
    password: ${SPRING_DATASOURCE_PASSWORD}
  
  jpa:
    hibernate:
      ddl-auto: validate # Safety: don't auto-update schema in prod
    show-sql: false

  data:
    redis:
      host: ${SPRING_DATA_REDIS_HOST}
      port: ${SPRING_DATA_REDIS_PORT}

  cloud:
    aws:
    # In production, use real AWS services or a managed environment
      region:
        static: ${SPRING_CLOUD_AWS_REGION_STATIC}
      credentials:
        access-key: ${SPRING_CLOUD_AWS_CREDENTIALS_ACCESS_KEY}
        secret-key: ${SPRING_CLOUD_AWS_CREDENTIALS_SECRET_KEY}
      # endpoint is usually not needed for real AWS SDK

logging:
  level:
    root: INFO
    com.digitalwallet.platform: INFO

app:
  name: Digital Wallet Platform - Production
  version: ${app.version:1.0.0}
  s3:
    bucket-name: ${APP_S3_BUCKET_NAME:wallet-bucket-prod}
